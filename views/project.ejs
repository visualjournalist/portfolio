<!DOCTYPE html>
<html>
	<head>
		<% include partials/template/head.ejs %>
	</head>
	<body>
		<% include partials/template/menu.ejs %>

		<% include partials/template/header.ejs %>

		<div id='navigation'>
			<a id='prev' title='previousprofile'>&nbsp;</a>
			<a id='next' title='nextprofile'>&nbsp;</a>
			<div id='screenLeft'></div>
			<div id='screenRight'></div>
		</div>

		<div id='container'>

			<div id='sharingLinks'>
				<div class='box'>
				<a href='https://twitter.com/<%= data[0].twitter %>' class='share' id='twitter'></a>
				<a href='https://linkedin.com/in/<%= data[0].linkedin %>' class='share' id='linkedin'></a>
				</div>
			</div>

			<div class='entry' id='projectEntry'>
				<div class='floatLeft category <%= projectData.category %>'>
				<h3 class='category'><a href='/portfolio/<%= projectData.category %>'><%= projectData.category %></a></h3>
				</div>
				<div class='floatRight'><h3 class='date'><%= projectData.date %> %></h3></div>
				<div class='clearMe'></div>
				<h2 class='headline'><%= projectData.title %></h2>




				<% if (projectData.videoembed!=""){ %>
					<iframe width="640" height="360" src="<%= projectData.videoembed %>" frameborder="0" allowfullscreen></iframe>
					<div class='credit'><%= projectData.employer %></div>
				<% } else { %>
					<div class='<%= verticalImage %>'>
					<a href='<%= projectData.projectlink %>' target='_blank' ><img src='/images/<%= projectData.imagebase %>.jpg' <% if (projectData.alttag!=""){ %> alt = '<%= projectData.alttag %>'<% } %>/></a>
					<div class='credit' style='padding-right:0;'><%= projectData.employer %></div>
					</div>
				<% } %>

				<div class='description'><%- projectData.descriptionSplit %></div>




				<ul class='listView'>
					<% if (projectData.projectlink!=""){ %>
						<a href='<%= projectData.projectlink %>' target='_blank'><li>View the project</li></a>
					<% } %>
					<% if (projectData.videolink!=""){ %>
						<a href='<%= projectData.videolink %>' target='_blank'><li>Watch a video</li></a>
					<% } %>
					<% if (projectData.github!=""){ %>
						<a href='<%= projectData.githublink %>' target='_blank'><li>Check out the code</li></a>
					<% } %>
					<% if (projectData.bloglink!=""){ %>
						<a href='<%= projectData.bloglink %>' target='_blank'><li>Read more</li></a>
					<% } %>
				</ul>
				<div class='clearMe'></div>

			</div>

			<div class='entry' style='margin-bottom: 20px;'>
				<div class='floatLeft category <%= projectData.category %>'>
				<h3 class='category'><a href='/portfolio/<%= projectData.category %>'>Recent <%= projectData.category %>s</a></h3>
				</div>
				<div class='floatRight'><h3 class='date'><a href='/portfolio/'>View full portfolio</a></h3></div>
			</div>



			<div id='containerGrid'>
				<div class='inset'>
					<% include partials/template/loop.ejs %>
				</div>
			</div><!-- containerGrid -->



		</div><!-- container -->
		<% include partials/template/footer.ejs %>

		<% include partials/template/scripts.ejs %>
	</body>
</html>
